---
// import TableOfContents from "@/components/TableOfContents.astro";
import Layout from "./Layout.astro";
import "../styles/MarkdownPosts.css"
const { frontmatter } = Astro.props;
---

<Layout title={frontmatter.title}>
    <!-- <h1>{frontmatter.title}</h1> -->
    <!-- <p>Escrito por {frontmatter.author}</p> -->
    <div class="bg-white dark:bg-slate-900 max-w-2xl mb-2 mx-auto p-4 pt-8 sm:p-8">
        <div class="flex flex-col items-center gap-4 p-4 pb-0">
            <div class="flex flex-row box-border">
                <a href="/portfolio" class="dark:text-white return_home w-8 mx-auto pr-8">
                    <i class="material-icons md-light">arrow_back</i>
                </a>
                <span><h1 class="dark:text-white text-sm sm:text-base">{frontmatter.title}</h1></span>
            </div>
            <div class="dark:text-white flex flex-col gap-2">
                <p>{frontmatter.date.toLocaleDateString("es-es", {
                    year: 'numeric',
                    month: '2-digit',
                    day: 'numeric'
                })}</p>
                <!-- <TableOfContents frontmatter={frontmatter} headings={headings}/> -->
                <slot />
            </div>
        </div>
    </div>
</Layout>